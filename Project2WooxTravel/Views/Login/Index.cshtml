@model Project2WooxTravel.Entities.Admin

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Login_Tema/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Login_Tema/css/main.css">
</head>
<body>
    <form method="post">
        <div class="limiter">
            <div class="container-login100" style="background-image: url('/Login_Tema/images/bg-01.jpg');">
                <div class="wrap-login100">
                    <!-- Form'da asp-action ve asp-controller ekleniyor -->
                    <form asp-action="Login" asp-controller="Admin" method="post" class="login100-form validate-form">
                        <span class="login100-form-logo">
                            <i class="zmdi zmdi-landscape"></i>
                        </span>

                        <span class="login100-form-title p-b-34 p-t-27">
                            ADMIN LOGIN
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input asp-for="Username" class="input100" type="text" placeholder="Username">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            <input asp-for="Password" class="input100" type="password" placeholder="Password">
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>

                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <!-- Button'a type="submit" eklendi -->
                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn">
                                Login
                            </button>
                        </div>

                        <div class="text-center p-t-90">
                            <a class="txt1" href="~/Views/Register/Index.cshtml">
                                Become a Member
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </form>
    <div id="dropDownSelect1"></div>
    <script src="~/Login_Tema/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Login_Tema/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/Login_Tema/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Login_Tema/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Login_Tema/vendor/select2/select2.min.js"></script>
    <script src="~/Login_Tema/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Login_Tema/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Login_Tema/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Login_Tema/js/main.js"></script>
</body>
</html>
