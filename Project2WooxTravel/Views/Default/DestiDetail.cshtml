@model Project2WooxTravel.Entities.Destination

@{
    ViewBag.Title = "DestiDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ***** Main Banner Area Start ***** -->
<div class="about-main-content" style="background-image: url(@Model.ImageUrl) !important">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="content">
                    <div class="blur-bg" style="background: url(@Model.ImageUrl) no-repeat center center fixed !important;"></div>
                    <h4>Yeni Bir Yer Keşfedin: @Model.City/@Model.Country</h4>
                    <div class="line-dec"></div>
                    <h2>@Model.Title</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<div class="more-about p-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 align-self-center">
                <div class="left-image">
                    <img src="@Model.ImageUrl" alt="">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>@Model.Title</h2>
                    <p>@Model.Description</p>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="info-item">
                            <h4>@Model.DayNight-@(Model.DayNight-1)</h4>
                            <span>Gün-Gece</span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="info-item">
                            <h4>@Model.Capacity</h4>
                            <span>Gezi Kapasitesi</span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="info-item">
                            <div class="row">
                                <div class="text-center col-lg-12">
                                    <h4>@String.Format("{0:C0}", Model.Price)₺</h4>
                                    <span>Gezi Ücreti</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>