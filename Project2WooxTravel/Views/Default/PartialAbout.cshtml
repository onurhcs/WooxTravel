@model  List<Project2WooxTravel.Entities.Destination>

@{
    ViewBag.Title = "PartialAbout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var random = new Random();
    var item = Model.OrderBy(x => random.Next()).FirstOrDefault();
}

@if (item != null)
{
    <!-- ***** Main Banner Area Start ***** -->
    <div class="about-main-content" style="background-image: url(@item.ImageUrl) !important">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="content">
                        <div class="blur-bg" style="background: url(@item.Title) no-repeat center center fixed !important;"></div>
                        <h4>Yeni Bir Yer Keşfedin: @item.City/@item.Country</h4>
                        <div class="line-dec"></div>
                        <h2>@item.Title</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
}

<div class="cities-town">
    <div class="container">
        <div class="row">
            <div class="slider-content">
                <div class="row">
                    <div class="col-lg-12">
                        <h2>Turlarımız <em> &amp; </em></h2>
                    </div>
                    <div class="col-lg-12">
                        <div class="owl-cites-town owl-carousel">
                            @foreach (var city in Model)
                            {
                                <div class="item">
                                    <div class="thumb">
                                        <img src="@city.ImageUrl" alt="">
                                        <h4>@city.City</h4>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



